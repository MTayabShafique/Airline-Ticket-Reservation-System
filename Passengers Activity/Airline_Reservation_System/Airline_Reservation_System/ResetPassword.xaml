<Window x:Class="Airline_Reservation_System.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Reset Password" Height="518" Width="620"
        Icon=" images/useractivity.ico">
    <Window.Background>
        <ImageBrush ImageSource="images/plane.jpg"/>

    </Window.Background>
    <Grid Height="487" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="612">
        <Label Content="New Password:" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="182" FontWeight="Bold" FontSize="14"/>
        <Label Content="Re-enter New Password:" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="182" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="resetPass" Content="Reset Password" HorizontalAlignment="Left" Margin="102,156,0,0" VerticalAlignment="Top" Width="114" Height="28" FontWeight="Bold" FontSize="14" Click="resetPass_Click"/>
        <PasswordBox x:Name="newPass" HorizontalAlignment="Left" Margin="197,49,0,0" VerticalAlignment="Top" Width="120" Height="29"/>
        <PasswordBox x:Name="re_entNewPass" HorizontalAlignment="Left" Margin="197,95,0,0" VerticalAlignment="Top" Width="120" Height="29" RenderTransformOrigin="0.5,0.862"/>

    </Grid>
</Window>
