<Window x:Class="Airline_Reservation_System.FlightDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlightDetail" Height="518" Width="641"
        Icon=" images/ATRS.ico">
    <Window.Background>
        <ImageBrush ImageSource="images/plane.jpg"/>

    </Window.Background>

    <Grid>
        <DataGrid x:Name="gridFlights" HorizontalAlignment="Left" Margin="0,24,0,0" VerticalAlignment="Top" Width="612" Height="337"/>
        <Button x:Name="signOutFD" Content="Sign Out" HorizontalAlignment="Left" Margin="470,415,0,0" VerticalAlignment="Top" Width="132" Height="28" FontWeight="Bold" FontSize="14" Click="signOutFD_Click"/>
        <Button x:Name="reserveTKT" Content="Reserve Ticket" HorizontalAlignment="Left" Margin="230,415,0,0" VerticalAlignment="Top" Width="132" Height="28" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14" Click="reserveTKT_Click"/>
        <Button x:Name="backActivity" Content="Back" HorizontalAlignment="Left" Margin="10,415,0,0" VerticalAlignment="Top" Width="132" Height="28" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.591,0.179" Click="backActivity_Click"/>


    </Grid>
</Window>
