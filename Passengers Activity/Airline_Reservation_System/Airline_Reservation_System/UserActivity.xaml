<Window x:Class="Airline_Reservation_System.UserActivity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Passenger Activity" Height="428" Width="584"
        Icon=" images/useractivity.ico">
    <Window.Background>
        <ImageBrush ImageSource="images/plane.jpg"/>

    </Window.Background>
    <Grid>
        <Button x:Name="SearchFD" Content="Search Flight Details" HorizontalAlignment="Left" Margin="54,71,0,0" VerticalAlignment="Top" Width="178" Height="28" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14" Click="SearchFD_Click"/>
        <Button Content="Cancel Ticket" HorizontalAlignment="Left" Margin="54,185,0,0" VerticalAlignment="Top" Width="178" Height="25" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14"/>
        <Button x:Name="Act_back" Content="Sign Out" HorizontalAlignment="Left" Margin="54,290,0,0" VerticalAlignment="Top" Width="178" Height="25" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14" Click="Act_BACK"/>

    </Grid>
</Window>
